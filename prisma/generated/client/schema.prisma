generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
  output          = "../generated/client"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Bed {
  id        String    @id @default(uuid())
  bedNumber String?
  bedStatus String? // Available, Occupied, Under Maintenance
  patient   Patient[] // Add reverse relation to Patient
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([bedNumber])
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  password  String?
  name      String?
  deptcode  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshToken  RefreshToken[]
  patients      Patient[]
  patientCounts PatientCount[]
  roles         Role[]         @relation("UserRoles")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  route       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users User[] @relation("UserRoles")
}

model tblDepartment {
  tblDepartmentID Decimal   @id @db.Decimal(19, 0)
  deptcode        String?   @unique @db.VarChar(10)
  deptname        String?   @db.VarChar(50)
  patients        Patient[]
}

model Patient {
  id               String    @id @default(uuid())
  name             String?
  nationality      String?
  sex              String?
  idNumber         String?
  age              Int?
  mobileNumber     String?
  status           String?
  cheifComplaint   String?
  ticket           String?
  ticketNumber     Int?
  barcode          String?   @db.Text
  bloodGroup       String?
  birthDate        DateTime?
  mrnNumber        String?
  remarks          String?
  registrationDate DateTime? @default(now())
  // Journey Time
  firstCallTime    DateTime?
  vitalTime        DateTime?
  assignDeptTime   DateTime?
  secondCallTime   DateTime?

  departmentId Decimal?       @db.Decimal(19, 0)
  department   tblDepartment? @relation(fields: [departmentId], references: [tblDepartmentID])
  userId       String?
  user         User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  bedId        String? // New field for bed assignment
  bed          Bed?           @relation(fields: [bedId], references: [id]) // Relation to Bed model
  state        Int?           @default(0)
  callPatient  Boolean?       @default(false)
  beginTime    DateTime?
  endTime      DateTime?

  vitalSigns VitalSign[]
  journeys   Journey[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([bedId]) // Add index for bed lookups
}

model VitalSign {
  id        String    @id @default(uuid())
  patientId String?
  patient   Patient?  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  bp        String?
  height    String?
  temp      String?
  spo2      String?
  weight    String?
  hr        String?
  rbs       String?
  rr        String?
  timeVs    DateTime?
  allergies Boolean?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Journey {
  id             String    @id @default(cuid())
  isActive       Boolean?  @default(true)
  firstCallTime  DateTime?
  vitalTime      DateTime?
  assignDeptTime DateTime?
  secondCallTime DateTime?
  beginTime      DateTime?
  endTime        DateTime?

  patientId String?
  patient   Patient? @relation(fields: [patientId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PatientCount {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  counter   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
